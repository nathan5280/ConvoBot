{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "basic": {
            "class": "logging.Formatter",
            "datefmt": "%I:%M:%S",
            "format": "..%(name)s | %(message)s"
        },
        "brief": {
            "class": "logging.Formatter",
            "datefmt": "%I:%M:%S",
            "format": "%(name)s | %(lineno)s | %(levelname)s | %(message)s"
        }
    },
    "handlers": {
        "console":{
            "level": "DEBUG",
            "class": "logging.StreamHandler",
            "formatter": "basic",
            "stream": "ext://sys.stdout"
        }
    },
    "loggers": {
        "convobot.configuration": {
          "level": "INFO",
          "handlers": ["console"],
          "propagate": false
        },
        "convobot.util": {
          "level": "INFO",
          "handlers": ["console"],
          "propagate": false
        },
        "convobot.simulate": {
          "level": "INFO",
          "handlers": ["console"],
          "propagate": false
        },
        "convobot.manipulate": {
          "level": "INFO",
          "handlers": ["console"],
          "propagate": false
        },
        "convobot.train": {
          "level": "DEBUG",
          "handlers": ["console"],
          "propagate": false
        }
    },
    "root": {
        "level": "INFO",
        "handlers": ["console"]
    }
}
