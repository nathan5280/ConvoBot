{
    "Environment": {
        "Description": "32x32 Mono Image",
        "Date": "Sat Sep 30 08:53:25 MDT 2017",
        "ImageSize": [
            32,
            32
        ],
        "Channels": 3
    },
    "Simulation": {
        "SimulatorName": "mono",
        "CameraHeight": 5,
        "OutputDirName": "images/test-32x32",
        "Radius": {
            "Range": {
                "Min": 15.0,
                "Max": 30.0,
                "Step": 5
            }
        },
        "Theta": {
            "Range": {
                "Min": 0.0,
                "Max": 360.0,
                "Step": 45.0
            }
        },
        "Alpha": {
            "Range": {
                "Min": -10.0,
                "Max": 10.0,
                "Step": 5.0,
                "MinFactor": 1,
                "MaxFactor": 1
            }
        }
    },
    "Transformer": {
        "Pipeline": [
            {
                "TransformerName": "color-converter",
                "InputDirName": "images/test-32x32",
                "OutputDirName": "prepared-images/test-32x32"
            },
            {
                "TransformerName": "image-to-nparray",
                "InputDirName": "prepared-images/test-32x32",
                "OutputDirName": "prepared-images/test-32x32"
            }
        ]
    },
    "Model": {
        "Name": "convobot",
        "ModelName": "convobot1",
        "InputDirName": "prepared-images/test-32x32",
        "OutputDirName": "model/test-32x32",
        "ModelFilename": "model.h5",
        "Resume": true,
        "Data": {
            "Label": "prepared-images/test-32x32/label.npy",
            "Image": "prepared-images/test-32x32/image.npy",
            "Results": "predictions.csv"
        },
        "ResumePhase": 2,
        "Split": true,
        "ValidationSplit": 0.25,
        "TestSplit": 0.1,
        "Schedule": [
            {
                "Name": "phase 1",
                "Sessions": 2,
                "Epochs": 1,
                "BatchSize": 100,
                "LearningRate": 0.001
            },
            {
                "Name": "phase 2",
                "Sessions": 2,
                "Epochs": 1,
                "BatchSize": 100,
                "LearningRate": 0.001
            },
            {
                "Name": "phase 3",
                "Sessions": 50,
                "Epochs": 10,
                "BatchSize": 100,
                "LearningRate": 0.001
            }
        ],
        "TensorBoardPath": "model/test-32x32/graph"
    }
}
