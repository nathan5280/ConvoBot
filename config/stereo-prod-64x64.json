{
    "Environment": {
        "Description": "64x64 stereo Image",
        "Date": "Sat Sep 30 08:53:25 MDT 2017",
        "ImageSize": [
            64,
            64
        ],
        "Channels": 3
    },
    "Simulation": {
        "SimulatorName": "stereo",
        "CameraHeight": 5,
        "OutputDirName": "images/64x64",
        "StereoOffset": 3,
        "Radius": {
            "Range": {
                "Min": 15.0,
                "Max": 30.0,
                "Step": 0.4
            }
        },
        "Theta": {
            "Range": {
                "Min": 0.0,
                "Max": 360.0,
                "Step": 1.0
            }
        },
        "Alpha": {
            "Range": {
                "Min": -10.0,
                "Max": 10.0,
                "Step": 5.0,
                "MinFactor": 1,
                "MaxFactor": 1
            }
        }
    },
    "Transformer": {
        "Pipeline": [
            {
              "TransformerName": "stereo-stacker",
              "InputDirName": "images/64x64/left",
              "OutputDirName": "prepared-images/64x64"
            },
            {
              "TransformerName": "image-to-nparray",
              "InputDirName": "prepared-images/64x64",
              "OutputDirName": "prepared-images/64x64"
            }
        ]
    },
    "Model": {
        "Name": "convobot",
        "ModelName": "convobot1",
        "InputDirName": "prepared-images/64x64",
        "OutputDirName": "model/64x64",
        "ModelFilename": "model.h5",
        "Resume": false,
        "Data": {
            "Label": "prepared-images/64x64/label.npy",
            "Image": "prepared-images/64x64/image.npy",
            "Results": "predictions.csv"
        },
        "ResumePhase": 2,
        "Split": true,
        "ValidationSplit": 0.25,
        "TestSplit": 0.1,
        "Schedule": [
            {
                "Name": "phase 1",
                "Sessions": 5,
                "Epochs": 2,
                "BatchSize": 100,
                "LearningRate": 0.001
            },
            {
                "Name": "phase 2",
                "Sessions": 5,
                "Epochs": 2,
                "BatchSize": 100,
                "LearningRate": 0.001
            },
            {
                "Name": "phase 3",
                "Sessions": 500,
                "Epochs": 10,
                "BatchSize": 100,
                "LearningRate": 0.001
            }
        ],
        "TensorBoardPath": "model/64x64/graph"
    }
}
